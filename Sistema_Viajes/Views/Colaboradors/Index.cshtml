@model IEnumerable<Sistema_Viajes.Models.Colaborador>

@{
    ViewData["Title"] = "Colaboradores FarSiman";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Colaboradores FarSiman</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Crear nuevo Colaborador</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdColaborador">Editar</a> |
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.IdColaborador">Información</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdColaborador">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
