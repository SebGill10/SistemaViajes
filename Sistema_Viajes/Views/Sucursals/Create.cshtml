@model Sistema_Viajes.Models.Sucursal

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear nueva</h1>

<h4>Sucursal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FSucursal" class="control-label"></label>
                <input asp-for="FSucursal" class="form-control" />
                <span asp-validation-for="FSucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SUbicacion" class="control-label"></label>
                <input asp-for="SUbicacion" class="form-control" />
                <span asp-validation-for="SUbicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distancia" class="control-label"></label>
                <input asp-for="Distancia" class="form-control" />
                <span asp-validation-for="Distancia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
