@model IEnumerable<Sistema_Viajes.Models.RegistroViaje>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaViaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sucursal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transportista)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaViaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sucursal.FSucursal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transportista.FTransportista)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRegistroViaje">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRegistroViaje">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRegistroViaje">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
