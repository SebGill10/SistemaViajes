@model Sistema_Viajes.Models.Transportista

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar nombre</h1>

<h4>Transportista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTransportista" />
            <div class="form-group">
                <label asp-for="FTransportista" class="control-label"></label>
                <input asp-for="FTransportista" class="form-control" />
                <span asp-validation-for="FTransportista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar nombre" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a Transportista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
